@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<BTL_LTWNC.Models.EF.Product>

<link rel="stylesheet" href="./css/home.css" asp-append-version="true" />


<section class="hero__section">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-6">
                <div class="hero__content pt-4">
                    <p class="text-uppercase"> Now taking online orders</p>
                    <h2 style="font-size: 80px;">Laziza Computer</h2>
                    <p>
                        🌟 Explore the World of High-Performance Computers <br>
                        💻 A Wide Range of Products – Powerful Configurations – Affordable Prices <br>
                        🚀 Your Trusted Companion in Every Tech Journey
                    </p>

                    <div class="btn buy__btn text-uppercase mt-3">
                        <a href="/shop">Shop now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-6">
                <img src="./public/images/a.png" width="200px" />
            </div>
        </div>
    </div>
</section>

<section class="trending__products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Trending Products</h2>
            </div>
            @foreach (var item in Model)
            {
                @await Html.PartialAsync("~/Views/Shared/_ProductPartialView.cshtml", item)
            }
        </div>
    </div>
</section>

<section class="best_sales">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Best sales</h2>
            </div>
            @foreach (var item in Model)
            {
                @await Html.PartialAsync("~/Views/Shared/_ProductPartialView.cshtml", item)
            }
        </div>
    </div>
</section>

